<Window x:Class="WPF11_Ejercicio2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF11_Ejercicio2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="10">
        <Border BorderBrush="Black" BorderThickness="3" CornerRadius="20" Name="Borde" Background="Black">
            <StackPanel VerticalAlignment="Center">
                <Slider Maximum="255" Margin="10" Name="Rojo" ValueChanged="Cambio"/>
                <Slider Maximum="255" Margin="10" Name="Verde" ValueChanged="Cambio"/>
                <Slider Maximum="255" Margin="10" Name="Azul" ValueChanged="Cambio"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>

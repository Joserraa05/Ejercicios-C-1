<Window x:Class="WPF11_Ejercicio4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF11_Ejercicio4"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="800">
    <Grid>
        <StackPanel>
            <TabControl Name="Pestanias" Height="350">
                <TabItem Header="Información personal" Width="200" Height="30" FontWeight="Bold" Name="Personal">
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="300" Margin="20">
                        <Label Content="Nombre:" FontWeight="Bold"/>
                        <TextBox Height="30" VerticalContentAlignment="Center"/>
                        <Label Content="Fecha de nacimiento:" FontWeight="Bold"/>
                        <DatePicker Height="30" VerticalContentAlignment="Center"/>
                        <Label Content="Estado civil:" FontWeight="Bold"/>
                        <TextBox Height="30" VerticalContentAlignment="Center"/>
                        <Label Content="Género:" FontWeight="Bold"/>
                        <TextBox Height="30" VerticalContentAlignment="Center"/>
                    </StackPanel>
                </TabItem>
                <TabItem Header="Información laboral" Width="200" Height="30" FontWeight="Bold" Name="Laboral">
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="300" Margin="20">
                        <Label Content="Empresa:" FontWeight="Bold"/>
                        <TextBox Height="30" VerticalContentAlignment="Center"/>
                        <Label Content="Fecha de incorporación:" FontWeight="Bold"/>
                        <DatePicker Height="30" VerticalContentAlignment="Center"/>
                        <Label Content="Departamento:" FontWeight="Bold"/>
                        <TextBox Height="30" VerticalContentAlignment="Center"/>
                        <Label Content="Puesto de trabajo:" FontWeight="Bold"/>
                        <TextBox Height="30" VerticalContentAlignment="Center"/>
                    </StackPanel>
                </TabItem>
                <TabItem Header="Información general" Width="200" Height="30" FontWeight="Bold" Name="General">
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="300" Margin="20">
                        <Label Content="Comida favorita:" FontWeight="Bold"/>
                        <TextBox Height="30" VerticalContentAlignment="Center"/>
                        <Label Content="Animal favorito:" FontWeight="Bold"/>
                        <TextBox Height="30" VerticalContentAlignment="Center"/>
                    </StackPanel>
                </TabItem>
            </TabControl>
            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                <Button Content="Anterior" Height="30" Width="100" Margin="10"  Click="Previous"/>
                <Button Content="Seleccionado" Height="30" Width="100" Margin="10" Click="Actual"/>
                <Button Content="Siguiente" Height="30" Width="100" Margin="10" Click="Next"/>
            </StackPanel>
            <Label Name="Mensaje" HorizontalContentAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>

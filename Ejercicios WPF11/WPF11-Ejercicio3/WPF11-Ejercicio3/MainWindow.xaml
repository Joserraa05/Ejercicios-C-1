<Window x:Class="WPF11_Ejercicio3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF11_Ejercicio3"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TabControl>
            <TabItem Header="Información personal" Width="200" Height="30" FontWeight="Bold">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="300">
                    <Label Content="Nombre:" FontWeight="Bold"/>
                    <TextBox Height="30" VerticalContentAlignment="Center"/>
                    <Label Content="Fecha de nacimiento:" FontWeight="Bold"/>
                    <DatePicker Height="30" VerticalContentAlignment="Center"/>
                    <Label Content="Estado civil:" FontWeight="Bold"/>
                    <TextBox Height="30" VerticalContentAlignment="Center"/>
                    <Label Content="Género:" FontWeight="Bold"/>
                    <TextBox Height="30" VerticalContentAlignment="Center"/>
                </StackPanel>
            </TabItem>
            <TabItem Header="Información laboral" Width="200" Height="30" FontWeight="Bold">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="300">
                    <Label Content="Empresa:" FontWeight="Bold"/>
                    <TextBox Height="30" VerticalContentAlignment="Center"/>
                    <Label Content="Fecha de incorporación:" FontWeight="Bold"/>
                    <DatePicker Height="30" VerticalContentAlignment="Center"/>
                    <Label Content="Departamento:" FontWeight="Bold"/>
                    <TextBox Height="30" VerticalContentAlignment="Center"/>
                    <Label Content="Puesto de trabajo:" FontWeight="Bold"/>
                    <TextBox Height="30" VerticalContentAlignment="Center"/>
                </StackPanel>
            </TabItem>
            <TabItem Header="Información general" Width="200" Height="30" FontWeight="Bold">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="300">
                    <Label Content="Comida favorita:" FontWeight="Bold"/>
                    <TextBox Height="30" VerticalContentAlignment="Center"/>
                    <Label Content="Animal favorito:" FontWeight="Bold"/>
                    <TextBox Height="30" VerticalContentAlignment="Center"/>
                </StackPanel>
            </TabItem>
        </TabControl>
    </Grid>
</Window>

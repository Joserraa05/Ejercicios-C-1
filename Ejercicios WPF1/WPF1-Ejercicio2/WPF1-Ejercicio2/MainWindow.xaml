<Window x:Class="WPF1_Ejercicio2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF1_Ejercicio2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button Margin="200, 200, 200, 100" FontWeight="Bold">Botón con texto bold</Button>
        <WrapPanel>
            <TextBlock Margin="10, 10, 10, 10" Foreground="Green">Bloque de texto verde</TextBlock>
            <TextBlock Margin="10, 10, 10, 10" Foreground="Blue">Bloque de texto azul</TextBlock>
            <TextBlock Margin="10, 10, 10, 10">Bloque de texto sin formato</TextBlock>
        </WrapPanel>
    </Grid>
</Window>

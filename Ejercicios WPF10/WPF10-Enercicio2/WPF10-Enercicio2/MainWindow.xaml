<Window x:Class="WPF10_Enercicio2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF10_Enercicio2"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="800">
    <Grid>
        <StackPanel HorizontalAlignment="Center" >
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Label Content="Introduce la dimensión de la matriz: "/>
                <TextBox Width="30" Name="Input"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="Inicializa matriz" Margin="5" Height="30" Click="IniMatriz"/>
                <StackPanel>
                    <Button Content="Imprime matriz" Margin="5" Height="30" Click="ImpMatriz"/>
                    <Button Content="Imprime traspuesta" Margin="5" Height="30" Click="ImpTraspuesta"/>
                </StackPanel>
            </StackPanel>
            <TextBlock Height="600" Name="Resultado" Width="600"/>
        </StackPanel>
    </Grid>
</Window>

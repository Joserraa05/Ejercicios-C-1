<Window x:Class="WPF10_Ejercicio1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF10_Ejercicio1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel Orientation="Horizontal">
                <Label Margin="10" Content="Introduce un DNI sin letra"/>
                <TextBox Margin="10" Width="150" Name="InputDni" KeyDown="TeclaEnter"></TextBox>
            </StackPanel>
            <TextBlock Margin="10" Name="ResultDni" IsEnabled="False"/>
        </StackPanel>
    </Grid>
</Window>

<Window x:Class="WPF10_Ejercicio3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF10_Ejercicio3"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="1000">
    <Grid>
        <StackPanel>
            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                <Button Content="Agregar una nueva tarea" Width="160" Height="30" Margin="10" Click="NuevaTarea"/>
                <Button Content="Mostrar siguiente" Width="160" Height="30" Margin="10" Click="MostrarSiguiente"/>
                <Button Content="Realizar siguiente" Width="160" Height="30" Margin="10" Click="RealizarSiguiente"/>
                <Button Content="Mostrar nº tareas" Width="160" Height="30" Margin="10" Click="MostrarNumero"/>
                <Button Content="Mostrar pendientes" Width="160" Height="30" Margin="10" Click="MostrarPendiente"/>
            </StackPanel>
            <TextBox Width="400" Margin="5" Name="Input"/>
            <TextBlock Height="300" Margin="10" Name="Texto"/>
        </StackPanel>
    </Grid>
</Window>
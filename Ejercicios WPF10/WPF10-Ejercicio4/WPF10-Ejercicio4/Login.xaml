<Window x:Class="WPF10_Ejercicio4.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF10_Ejercicio4"
        mc:Ignorable="d"
        Title="Login" Height="200" Width="300">
    <Grid>
        <StackPanel>
            <Label Content="Usuario:" Width="150" HorizontalContentAlignment="Center" FontFamily="Corbel" FontWeight="Bold"/>
            <TextBox Name="User" Width="270"/>
            <Label Content="Contraseña:" Width="150" HorizontalContentAlignment="Center" FontFamily="Corbel" FontWeight="Bold"/>
            <PasswordBox Name="Contra" Width="270"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Click="Continuar" Content="Continuar" Height="30" Margin="10" Width="100"/>
                <Button Click="Cancelar" Content="Cancelar" Height="30" Margin="10" Width="100"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>

<Window x:Class="WPF10_Ejercicio4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF10_Ejercicio4"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel HorizontalAlignment="Center" Grid.Column="0">
            <Label Content="ADMINISTRACIÓN" Width="150" HorizontalContentAlignment="Center" FontFamily="Corbel" FontWeight="Bold"/>
            <Button Click="Alta" Content="Alta Empleado" Height="30" Margin="5"/>
            <Button Click="Total" Content="Horas extras totales" Height="30" Margin="5"/>
            <Button Click="Informe" Content="Informe completo" Height="30" Margin="5"/>
        </StackPanel>
        <StackPanel HorizontalAlignment="Center" Grid.Column="1">
            <Label Content="EMPLEADOS" Width="150" HorizontalContentAlignment="Center" FontFamily="Corbel" FontWeight="Bold"/>
            <Button Click="Insertar" Content="Insertar horas extra" Height="30" Margin="5"/>
        </StackPanel>
        <TextBlock Grid.Row="1" Grid.ColumnSpan="2" Margin="10"/>
    </Grid>
</Window>

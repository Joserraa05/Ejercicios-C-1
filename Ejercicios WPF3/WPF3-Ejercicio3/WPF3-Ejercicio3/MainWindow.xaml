<Window x:Class="WPF3_Ejercicio3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF3_Ejercicio3"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label>
                <Span>
                    <Label Content="Usuario: "></Label>
                    <TextBox Name="user" Width="100" Margin="9.2, 0, 0, 0"></TextBox>
                </Span>
            </Label>
            <Label>
                <Span>
                    <Label Content="Password: "></Label>
                    <PasswordBox Name="pass" Width="100" MaxLength="8" PasswordChar="X"></PasswordBox>
                </Span>
            </Label>
            <Label>
                <Button Click="btnLogin" Margin="50, 0, 0, 0">Iniciar sesión</Button>
            </Label>
        </StackPanel>
    </Grid>
</Window>

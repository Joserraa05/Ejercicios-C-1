<Window x:Class="WPF3_Ejercicio2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF3_Ejercicio2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="50">
            <Label>
                <Bold>¿Qué animal puede entrar por un ano humano?</Bold>
            </Label>
            <Label>
                <Span>
                    <Image Height="13" Source="/64431.png"></Image>
                    <RadioButton Name="rbA" Content="Mapache y medio"></RadioButton>
                </Span>
            </Label>
            <Label>
                <Span>
                    <Image Height="13" Source="/64431.png"></Image>
                    <RadioButton Name="rbB" Content="Tigre de bengala"></RadioButton>
                </Span>
            </Label>
            <Label>
                <Span>
                    <Image Height="13" Source="/64431.png"></Image>
                    <RadioButton Name="rbC" Content="Pingüino emperador"></RadioButton>
                </Span>
            </Label>
            <Label>
                <Span>
                    <Image Height="13" Source="/64431.png"></Image>
                    <RadioButton Name="rbD" Content="Todas son correctas"></RadioButton>
                </Span>
            </Label>
            <Button Click="btnCorregir" Height="20" Width="60" Margin="20">
                <Bold>Corregir</Bold>
            </Button>
        </StackPanel>
    </Grid>
</Window>

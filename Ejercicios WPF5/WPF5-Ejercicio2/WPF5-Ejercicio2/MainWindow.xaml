<Window x:Class="WPF5_Ejercicio2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF5_Ejercicio2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <DockPanel>
            <Menu DockPanel.Dock="Top" Background="Aquamarine">Menú Superior</Menu>
            <StatusBar DockPanel.Dock="Bottom" Background="BlueViolet">Barra de estado</StatusBar>
            <StackPanel DockPanel.Dock="Left" Background="Green">
                <Button>Botón 1</Button>
                <Button>Botón 2</Button>
                <Button>Botón 3</Button>
            </StackPanel>
            <TextBlock>Text block que ocupa el espacio restante</TextBlock>
        </DockPanel>
    </Grid>
</Window>

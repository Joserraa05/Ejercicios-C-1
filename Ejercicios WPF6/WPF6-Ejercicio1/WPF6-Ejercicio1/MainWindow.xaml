<Window x:Class="WPF6_Ejercicio1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF6_Ejercicio1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Label Content="_Nombre:" Target="{Binding ElementName=txtNombre}"/>
        <Label Grid.Row="1" Content="_Email:" Target="{Binding ElementName=txtEmail}"/>
        <TextBox Name="txtNombre" Grid.Column="1"/>
        <TextBox Name="txtEmail" Grid.Row="1" Grid.Column="1"/>
        <TextBox Grid.Row="2" Grid.ColumnSpan="2"/>
    </Grid>
</Window>

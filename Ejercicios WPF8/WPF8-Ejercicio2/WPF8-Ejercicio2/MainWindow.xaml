                    </MenuItem>
                    <MenuItem Header="Buenas" FontWeight="Normal" Click="Buenas">
                        <MenuItem.Icon>
                            <Image Source="/1f351.png"/>
                        </MenuItem.Icon>
                    </MenuItem>

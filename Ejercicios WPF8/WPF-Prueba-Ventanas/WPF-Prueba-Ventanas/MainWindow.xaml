<Window x:Class="WPF_Prueba_Ventanas.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Prueba_Ventanas"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <TextBox Name="txt" Margin="10" Height="50" FontSize="25"/>
            <Button Margin="10" Width="100" Height="50" Content="Mostrar saludo" Click="cambio"/>
        </StackPanel>
    </Grid>
</Window>

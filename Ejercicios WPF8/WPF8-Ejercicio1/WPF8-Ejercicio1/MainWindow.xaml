<Window x:Class="WPF8_Ejercicio1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF8_Ejercicio1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="300">
            <Label Content="_Nombre:"  Target="{Binding ElementName=txtNombre}"/>
            <TextBox Name="txtNombre"/>
            <Label Content="_Apellido:" Target="{Binding ElementName=txtApellido}"/>
            <TextBox Name="txtApellido"/>
            <Label Content="_Email:"/>
            <StackPanel Orientation="Horizontal">
                <TextBox Width="200" IsReadOnly="True"/>
                <Button Content="Rellenar email" Click="RellenarEmail" Margin="22,0,0,0"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>

<Window x:Class="WPF8_Ejercicio3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF8_Ejercicio3"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.CommandBindings>
        <CommandBinding Command="New" CanExecute="NewCommand_CanExecute" Executed="NewCommand_Executed"/>
    </Window.CommandBindings>
    <Grid>
        <DockPanel>
            <Menu DockPanel.Dock="Top" Background="Coral">
                <MenuItem Header="_Archivo" Padding="5" FontWeight="Bold" FontFamily="Arial">
                    <MenuItem Header="Nuevo" Command="New" FontWeight="Normal">
                        <MenuItem.Icon>
                            <Image Source="/1f351.png"/>
                        </MenuItem.Icon>
                    </MenuItem>
                    <MenuItem Header="_Guardar" FontWeight="Normal" Click="Save">
                        <MenuItem.Icon>
                            <Image Source="/1f351.png"/>
                        </MenuItem.Icon>
                    </MenuItem>
                </MenuItem>
                <MenuItem Header="_Editar" Padding="5" FontWeight="Bold" FontFamily="Arial">
                    <MenuItem Header="Cortar" Command="Cut" FontWeight="Normal">
                        <MenuItem.Icon>
                            <Image Source="/1f351.png"/>
                        </MenuItem.Icon>
                    </MenuItem>
                    <Separator/>
                    <MenuItem Header="Copiar" Command="Copy" FontWeight="Normal">
                        <MenuItem.Icon>
                            <Image Source="/1f351.png"/>
                        </MenuItem.Icon>
                    </MenuItem>
                    <MenuItem Header="Pegar" Command="Paste" FontWeight="Normal">
                        <MenuItem.Icon>
                            <Image Source="/1f351.png"/>
                        </MenuItem.Icon>
                    </MenuItem>
                </MenuItem>
            </Menu>
            <TextBox Name="txt" Margin="20"/>
        </DockPanel>
    </Grid>
</Window>

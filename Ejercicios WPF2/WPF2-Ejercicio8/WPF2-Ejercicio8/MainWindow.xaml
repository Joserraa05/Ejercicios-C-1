<Window x:Class="WPF2_Ejercicio8.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF2_Ejercicio8"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Label>
            <Bold>Módulos que pienso aprobar</Bold>
        </Label>
        <StackPanel Margin="30">
            <CheckBox IsThreeState="True" Name="TodoCheck" Checked="TodoCheck_Check" Unchecked="TodoCheck_Check">Todos los módulos</CheckBox>
            <StackPanel Margin="20, 10, 0 ,0">
                <CheckBox Name="di" Checked="check" Unchecked="check">Desarrollo de Interfaces</CheckBox>
                <CheckBox Name="sge" Checked="check" Unchecked="check">Sistemas de gestion empresarial</CheckBox>
                <CheckBox Name="ad" Checked="check" Unchecked="check">Acceso a Datos</CheckBox>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>

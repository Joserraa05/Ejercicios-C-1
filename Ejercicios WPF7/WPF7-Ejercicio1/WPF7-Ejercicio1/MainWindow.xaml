<Window x:Class="WPF7_Ejercicio1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF7_Ejercicio1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel VerticalAlignment="Center">
            <Button Click="Simple" Content="Simple MessageBox" Width="200" Margin="5"/>
            <Button Click="Title" Content="MessageBox con título" Width="200" Margin="5"/>
            <Button Click="Buttons" Content="MessageBox con botones" Width="200" Margin="5"/>
            <Button Click="Response" Content="MessageBox con respuesta" Width="200" Margin="5"/>
            <Button Click="Icon" Content="MessageBox con icono" Width="200" Margin="5"/>
            <Button Click="Default" Content="MessageBox con opción por defecto" Width="200" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>
